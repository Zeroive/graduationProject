/* pages/scan/scan.wxss */

.container{
  padding: 0;
  top: 0;
  left: 0;
  z-index: -1;
}

.scanBackground {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: -1;
}

.manipulatePanel {
  box-sizing: border-box;
  position: absolute;
  width: 100%;
  height: 65%;
  bottom: 0;
  background-color: #EBEEF5;
  border-radius: 70rpx 70rpx 0 0;
  display: flex;
  flex-direction: column;
  justify-content: start;
  padding-top: 10%;
}

.bookInfo {
  display: flex;
  position: relative;
  top: 10%;
  width: 100%;
  height: 20%;
}

.bookThumb {
  margin-left: 8%;
  width: 30%;
  height: 100%;
  border-radius: 10rpx;
}

.bookDetail {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  width: 60%;
  margin-left: 5%;
  margin-right: 5%;
  color: white;
}

.firInfo {
  /* 单行溢出 */
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.secInfo{
  
  color: #A8ABB2;
  font-size: 14px;
  /* 多行溢出 */
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.MCard {
  border-radius: 15px;
  margin: 10px auto;
  width: 80% !important;
  box-shadow: 0px 0px 8px  #dedfe0;
  font-weight: bold;
}

.Popupwrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.Popupcontainer {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 60%;
  height: 50%;
  border-radius: 10px;
  background-color: #fff
}

