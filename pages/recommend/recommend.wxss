/* pages/recommend/recommend.wxss */
.news_box {
  display: flex;
  margin-top: 80rpx;
  margin-left: 10px;
  width: 687rpx;
  height: 180rpx;
  background: #FFF;
  border-radius: 20rpx;
  box-shadow: 0px 4rpx 24rpx 0px rgba(221, 221, 221, 0.74);
  position: relative;
  box-sizing: border-box;
  padding: 20rpx 46rpx 21rpx 259rpx;
}

.g_icon {
  position: absolute;
  width: 245rpx;
  height: 245rpx;
  top: -32rpx;
  left: -7rpx;
  border-radius: 10rpx;
  border: 1rpx solid #f4f4f5;
}

.news_info {
  word-wrap: break-word;
  word-break: break-all;
}

/* 多行文字换行 */
.line_ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical
}

.news_item {
  display: flex;
  margin-top: 30rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #A9A6A6;
}