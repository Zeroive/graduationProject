/* pages/bookDetail/bookDetail.wxss */
.container {
  position: absolute;
  width: 85%;
  height: 65%;
  transform: translateX(-50%);
  left: 50%;
  margin-top: 10px;
  border-radius: 5px;
  box-shadow:0 0 10px rgb(153, 153, 153);
  background-color: #F5F7FA;
  overflow: hidden;
}

.header {
  display: flex;
  flex-direction: row;
}

.thumbContainer {
  margin-top: 10px;
  border-radius: 5px;
  width: 50%;
  height: 300px;
  transform: translateX(-30%);
  box-shadow:0 0 10px rgb(153, 153, 153);
}

.thumbContainer .thumb {
  width: 100%;
  margin-top: 30px;
  transform: perspective(800px)rotateY(40deg);
}

.bookInfo {
  width: 50%;
  transform: translateX(-20%);
  display: flex;
  flex-direction: column;
}

.bookInfo .bookName {
  margin-top: 10px;
  font-size: 18px;
  font-weight: 600;
  height: 50px;
}

.bookInfo .library {
  width: 100%;
  height: 20px;
  margin-top: 10px;
  background-color: #fef0f0;
  font-size: 12px;
  line-height: 20px;
  color:#A8ABB2;
}



.footer {
  width: 90%;
  height: 60px;
  margin: 0 auto;
  margin-top: 30px;
  background-color: black;
}
