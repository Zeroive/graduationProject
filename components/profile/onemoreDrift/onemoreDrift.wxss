/* components/onemoreDrift/onemoreDrift.wxss */

.wrapper {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 60%;
  height: 50%;
  border-radius: 10px;
  background-color: #fff
}

.container .title {
  font-size: 18px;
  width: 90%;
  font-weight: 600;
  margin-top: 10px;
  text-align: center;
  /* 多行溢出 */
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}