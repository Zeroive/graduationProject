/* components/profile/MCard/MCard.wxss */
.CardInfo {
  /* position: absolute; */
  /* box-sizing: border-box; */
  display: flex;
  flex-direction: row;
  top: 0;
  height: 80%;
  width: 100%;
  /* border: black solid 1px; */
}

.bookThumb {
  width: 100%;
  height: 100%;
  margin: 0 5px 0 5px;
}

.noneBookThumb {
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 10px;
  color: #c8c9cc;
  text-align: center;
}

.bookDetail {
  display: flex;
  flex-direction: column;
  /* justify-content: space-around; */
  width: 60%;
  margin-left: 10px;
}

.firInfo {
  /* 多行溢出 */
  word-break: break-all;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  font-weight: bold;
  margin-top: 10px;
  width: 180px;
}

.secInfo{
  font-size: 14px;
  /* 单行溢出 */
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #A8ABB2;
  margin-top: 10px;
  font-size: 12px;
  font-weight: 600;
}

.bookDetail .isDrift{
  color: #67C23A; 
  font-size: 14px;
  font-weight: 600;
  text-align: right;
}

.bookHandler {
  border-left: rgb(190, 188, 188) dotted 2px;
  margin-left: 5px;
  width: 20%;
  display: flex;
  flex-direction: column;
}

.handlerText {
  color: orange;
  font-size: 14px;
  font-weight: 600;
  margin: auto auto;
}

.CardFooter {
  /* position: absolute; */
  /* box-sizing: border-box; */
  display: flex;
  bottom: 0;
  width: 100%;
  height: 20%;
  border-radius: 8px;
  background-color: rgb(246, 246, 246);
}

.footerAvatar {
  border-radius: 50%;
  width: 20px;
  height: 20px;
  border:black solid 1px;
  margin: auto 0 auto 10px;
}

.footerDesc {
  margin: auto 0 auto 10px;
  color: rgb(186, 186, 186);
  font-size: 12px;
  font-weight: 550;
}

.footerRightDesc {
  position: absolute;
  right: 20px;
  /* top: 50%; */
  transform: translateY(50%);
  /* bottom: 12px; */
  color: rgb(186, 186, 186);
  font-size: 12px;
  font-weight: 550;
}

/* 文本提示 */
.reminder {
  color:#E6A23C;
}